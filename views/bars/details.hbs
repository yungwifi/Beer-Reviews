<h1>
    {{bar.name}}</h1>
<ul>
    {{#each bar.beers}}
    <a href="/users/{{userId}}/bars/{{bars._id}}/beers/{{beers._id}}">
        <li>{{this.name}}</li>
    </a>
    {{/each}}
</ul>

<h2>{{bar.location}}</h2>
<h2>{{bar.rating}}</h2>


<form action="/users/{{userId}}/bars/{{bar._id}}?_method=DELETE" method="POST">
    <button class="btn red" type="submit">Delete</button>
</form>