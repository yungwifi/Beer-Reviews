<h1>edit {{users.name}}</h1>

<form class="edit-user" action="/users/{{users._id}}?_method=PUT" method="POST">
    <div>
        <label for="name">Your Name</label>
        <input type="text" name="name" value="{{users.name}}">
    </div>
    <div>
        <label for="username">Your Username</label>
        <input type="text" name="username" value="{{users.username}}">
    </div>
    <div>
        <label for="age">Your Age</label>
        <input type="text" name="age" value="{{users.age}}">
    </div>
    <div>
        <label for="location">Your Location</label>
        <input type="text" name="location" value="{{users.location}}">
    </div>
    <div>
        <label for="image">Profile Picture</label>
        <input type="text" name="image" value="{{users.image}}">
    </div>
    <div>
        <label for="bio">User Description</label>
        <input type="text" name="bio" value="{{users.bio}}">
    </div>
    <button class="btn" type="submit">Update account</button>

    <button class="cancel-button waves-effect waves-light btn-small">
        <a href="/users">cancel</a>
    </button>


</form>