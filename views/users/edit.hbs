<h1>edit {{user.name}}</h1>

<form class="edit-user" method="POST" action="/users/{{id}}?_method=PUT">
    <div>
        <label for="name">Your Name</label>
        <input type="text" name="name" value="{{user.name}}">
    </div>
    <div>
        <label for="username">Your Username</label>
        <input type="text" name="username" value="{{user.username}}">
    </div>
    <div>
        <label for="age">Your Age</label>
        <input type="text" name="age" value="{{user.age}}">
    </div>
    <div>
        <label for="location">Your Location</label>
        <input type="text" name="location" value="{{user.location}}">
    </div>
    <div>
        <label for="image">Profile Picture</label>
        <input type="text" name="image" value="{{user.image}}">
    </div>
    <div>
        <label for="bio">User Description</label>
        <input type="text" name="bio">
    </div>
    <button class="btn" type="submit">Update account</button>

    <button class="btn">
        <a href="/users/{{id}}">cancel</a>
    </button>


</form>

<form action="/users/{{user.id}}?_method=DELETE" method="POST">
    <button class="btn red" type="submit">Delete {{user.username}}</button>
</form>