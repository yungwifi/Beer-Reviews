<h3> Edit {{beer.name}}</h3>
<div class="nav-wrapper">
    <div class="col s12">
        <a href="/users" class="breadcrumb black-text">Users</a>
        <a href="/users/{{userId}}/bars/{{barId}}" class="breadcrumb black-text">Bar</a>
        <a href="/users/{{userId}}/bars/{{barId}}/beers/{{beerId}}" class="breadcrumb black-text">Beer</a>
    </div>
</div>


<form action="/users/{{userId}}/bars/{{barId}}/beers/{{beersId}}?_method=PUT" method="POST">
    <div>
        <label for="name">Beer Name</label>
        <input type="text" name="name" value="{{beers.name}}">
    </div>
    <div>
        <label for="style">Beer Style</label>
        <input type="text" name="style" value="{{beers.style}}">
    </div>
    <div>
        <label for="abv">Beer's ABV</label>
        <input type="text" name="abv" value="{{beers.abv}}">
    </div>
    <div>
        <label for="rating">Beer Rating</label>
        <input type="text" name="rating" value="{{beers.rating}}">
    </div>
    <button class="btn" type="submit"> Update Beer</button>
    <br>
    <button class="waves-effect waves-light btn-small cancel-button">
        <a href="/users/{{userId}}/bars/{{barId}}/beers/{{beersId}}">cancel</a>
    </button>
</form>